{% extends 'base.html.twig' %}

{% block title %}Post{% endblock %}

{% block stylesheets %}
    <link href="{{ asset('css/post.css') }}" rel="stylesheet"/>
{% endblock %}

{% block body %}


    <div class="post">
        <div class="post_header">
            <div> {{ UserPost.Author }} </div>
            <div> {{ UserPost.Topic }} </div>
            <div> {{ UserPost.Date.format("Y-m-d") }} </div>
        </div>

        <div class="post_content">
            <div> {{ UserPost.Content }} </div>
        </div>

        <a href={{ UserPost.Id }}/comment> <input type="button" value="Dodaj komentarz"> </a>
    </div>

    {% for comment in Comments %}
        
        <div class="post">
            <div class="post_header">
                <div> {{ comment.Author }} </div>
                <div>  </div>
                <div> {{ comment.Date.format("Y-m-d") }} </div>
            </div>

            <div class="post_content">
                <div> {{ comment.Content }} </div>
            </div>
        </div>   

    {% endfor %}



{% endblock %}
